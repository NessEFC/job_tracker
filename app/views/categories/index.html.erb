<h1>All Categories</h1>

<%= link_to "Create a New Category", new_category_path %>

<ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.title, category_path(category) %></li>
    <%= link_to "Edit", edit_category_path(category) %>
    <%= link_to "Delete", category_path(category), method: "delete", data: {confirm: "Do you really wish to delete this category?"} %>
  <% end %>
</ul>
